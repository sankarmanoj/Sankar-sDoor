<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/connectedTextView"
        android:textColor="#23A"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="blue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="green"
        android:textColor="#2A3"
        android:id="@+id/wifistatusTextView"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignTop="@+id/connectedTextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="State : Unknown"
        android:id="@+id/stateTextView"
        android:layout_below="@+id/wifistatusTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open"
        android:id="@+id/openButton"
        android:layout_centerVertical="true"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/closeButton"
        android:layout_alignTop="@+id/openButton"
        android:layout_alignEnd="@+id/stateTextView" />

8
</RelativeLayout>
